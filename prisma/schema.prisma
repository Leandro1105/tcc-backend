generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tipo {
  Psicologo
  Paciente
}

enum Status {
  Pendente
  Pago
}

model Psicologo {
  id String @id @default(uuid())
  nome String
  cpf String @unique
  crp String
  telefone String
  email String @unique
  senha String
  role Tipo @default(Psicologo)

  consultas Atendimento[] @relation("Consultas do psicologo")
  pacientes Paciente[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("psicologos")
  @@index([email], name: "idx_email_psicologo")
}

model Paciente {
  id String @id @default(uuid())
  nome String
  cpf String @unique
  dataNascimento DateTime
  telefone String
  email String @unique
  senha String
  role Tipo @default(Paciente)

  consultas Atendimento[] @relation("Consultas do paciente")
  humor   Humor[]
  atividades Atividade[]
  psicologos Psicologo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pacientes")
  @@index([email], name: "idx_email_paciente")
}
model Atendimento {
  id String @id @default(uuid())
  data DateTime
  observacoes String
  pacienteId String
  psicologoId String

  paciente Paciente @relation("Consultas do paciente", fields: [pacienteId], references: [id])
  psicologo Psicologo @relation("Consultas do psicologo", fields: [psicologoId], references: [id])

  pagamentos Pagamento[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("atendimentos")
}

model Pagamento {
  id String @id @default(uuid())
  valor Float
  data DateTime
  dataVencimento DateTime
  parcela Int
  status Status
  atendimentoId String

  atendimento Atendimento @relation(fields: [atendimentoId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pagamentos")
}

model Humor {
  id String @id @default(uuid())
  data DateTime
  escala Int
  observacoes String
  pacienteId String

  paciente Paciente @relation(fields: [pacienteId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("humor")
}

model Atividade {
  id String @id @default(uuid())
  tipo String
  descricao String
  data DateTime
  impacto Int
  pacienteId String

  paciente Paciente @relation(fields: [pacienteId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("atividades")
}
